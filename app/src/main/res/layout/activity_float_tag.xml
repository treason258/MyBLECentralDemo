<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mjiayou.trecore.MainActivity">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/tc_margin_small"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_common_bg" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_new_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tc_margin_mini"
            android:text="增加一个标签" />

        <Button
            android:id="@+id/btn_remove_last_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tc_margin_mini"
            android:text="移除最后一个标签" />

        <Button
            android:id="@+id/btn_remove_all_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tc_margin_mini"
            android:text="移除全部标签" />

        <include
            layout="@layout/tc_layout_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/tc_margin_normal" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tc_margin_small"
            android:text="测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字" />

        <TextView
            android:id="@+id/tv_line_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tc_margin_small"
            android:text="当前显示行数" />

        <Button
            android:id="@+id/btn_reset_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tc_margin_mini"
            android:text="重置" />
    </LinearLayout>
</ScrollView>